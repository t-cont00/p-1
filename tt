
#!/bin/bash

API_URL="https://server.server.server.com/rest/api/1.0/projects/ABC/repos"
AUTH_TOKEN="nshehehhe"

# Function to fetch folders recursively
function list_all_folders {
    local project_name="$1"
    local base_path="$2"

    # API call to fetch directories and files
    response=$(curl -s -H "Authorization: Bearer $AUTH_TOKEN" \
                      -H "Content-Type: application/json" \
                      "$API_URL/$project_name/browse/$base_path")

    # Debugging: Print response if an error occurs
    if [[ "$response" == *"errors"* ]]; then
        echo "‚ùå Error: Failed to access $API_URL/$project_name/browse/$base_path"
        echo "üîç Response: $response"
        return
    fi

    # Extract folder names
    folders=($(echo "$response" | grep -o '"name":"[^"]*"' | sed -E 's/"name":"([^"]+)"/\1/'))

    # If no folders found, return
    if [[ ${#folders[@]} -eq 0 ]]; then
        echo "‚ö†Ô∏è No folders found under $base_path"
        return
    fi

    for folder in "${folders[@]}"; do
        full_path="$base_path/$folder"
        echo "üìÇ Found folder: $full_path"

        # Recursively list subfolders
        list_all_folders "$project_name" "$full_path" &
    done

    wait
}

# Function to process projects from projects.txt
function process_projects {
    while IFS= read -r project_name; do
        echo "üîç Checking project: $project_name"

        # Verify if the project path exists before scanning
        test_response=$(curl -s -H "Authorization: Bearer $AUTH_TOKEN" \
                              -H "Content-Type: application/json" \
                              "$API_URL/$project_name/browse/")
        
        if [[ "$test_response" == *"errors"* ]]; then
            echo "‚ùå Project '$project_name' does not have a 'browse/' path."
            continue
        fi

        echo "‚úÖ Starting folder scan for $project_name..."
        list_all_folders "$project_name" "$project_name/browse"
    done < projects.txt
}

echo "üöÄ Starting scan..."
process_projects
echo "‚úÖ Scan complete!"


#!/bin/bash

API_URL="https://server.server.server.com/rest/api/1.0/projects/ABC/repos"
AUTH_TOKEN="nshehehhe"

# Function to recursively list all folders under "project-name/browse/"
function list_all_folders {
    local project_name="$1"
    local base_path="$2"

    # Fetch folder & file list
    response=$(curl -s -H "Authorization: Bearer $AUTH_TOKEN" \
                      -H "Content-Type: application/json" \
                      "$API_URL/$project_name/browse/$base_path")

    if [[ "$response" == *"errors"* ]]; then
        return
    fi

    # Extract directory names
    folders=($(echo "$response" | grep -o '"name":"[^"]*"' | sed -E 's/"name":"([^"]+)"/\1/'))

    for folder in "${folders[@]}"; do
        full_path="$base_path/$folder"
        echo "üìÇ Found folder: $full_path"

        # Recursively search inside subfolders
        list_all_folders "$project_name" "$full_path" &
    done

    wait
}

# Function to fetch project names from projects.txt and list all folders
function process_projects {
    while IFS= read -r project_name; do
        echo "üîç Searching in project: $project_name"
        list_all_folders "$project_name" "$project_name/browse"
    done < projects.txt
}

echo "üöÄ Starting scan..."
process_projects
echo "‚úÖ Scan complete!"


